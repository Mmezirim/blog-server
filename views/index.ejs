<%- include('./partials/head.ejs') %>
<body>
    <nav class="nav">
        <div>
            <a href="/home"><h1>MY BLOG</h1></a>
                <P>EZENMUO BLOCKCHAIN</P>    
        </div>  
        <div>
            <%- include('./partials/nav.ejs') %>
        </div>   
    </nav>
    <div class="blog-summary">
        <h2>
            All blogs
        </h2>
        <div class="column">
            <% if(blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <a class="summary" href="/blogs/<%= blog._id %>">
                        <h3><%= blog.title %></h3>
                        <p><%= blog.snippet %></p>
                        <p class="date"><%= blog.createdAt.toLocaleDateString() %></p>
                    </a>
                <% }) %>
             <% } else { %>
                <p>There are no blogs to display....</p>
             <% } %>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>